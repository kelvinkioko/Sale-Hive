<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="Theme.SaleHive">
        <item name="colorPrimaryDark">?attr/colorPrimary</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>
    <!--This will be applied on any text described with 16sp, 24dp line height, main text color and Body1 appearance-->
    <style name="HeadlineTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <!--This will be applied on any text described with 16sp, 24dp line height, main text color and Body1 appearance-->
    <style name="TitleTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
    </style>

    <!--This will be applied on any text described with 16sp, 24dp line height, main text color and Body1 appearance-->
    <style name="MainTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>